/* pages/mescroll/index.wxss */
.scroll-demo1 {
    height: calc(100vh - 120rpx);

}

.item {
    text-align: center;
    line-height: calc((100vh - 120rpx)/10 - 1rpx);
    background-color: #fff;
    margin-bottom: 1rpx;
}

.refresh {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
}

.wapper {
    width: 26px;
    height: 40px;
    margin-right: 20rpx;
    position: relative;
}

.moveimg {
    width: 26px;
    height: 40px;
    background-size: cover;
    background-image: url('http://coolui.coolwl.cn/assets/a2a.png');
    position: absolute;
    left: 0;
    top: 0;
}

.moveimg2 {
    width: 26px;
    height: 40px;
    background-size: cover;
    background-image: url('http://coolui.coolwl.cn/assets/a29.png');
    position: absolute;
    left: 0;
    top: 0;
}

.img {
    width: 26px;
    height: 40px;
    background-size: cover;
    background-image: url('http://coolui.coolwl.cn/assets/a.png');
    animation: play 0.5s steps(3) infinite;
}

@keyframes play {
    from {
        background-position: 0px 0px;
    }

    to {
        background-position: -81px 0px;
    }
}

.huojian-refresh {
    position: relative;
}

.yuan {
    width: 150vw;
    height: 150vw;
    background-color: #59627c;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    /* transition: all .4s; */
}

.yuan.on {
    border-radius: 0 !important;
    /* transition: all .4s; */
}

.yun {
    width: 100%;
    height: 100%;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    transition: all .4s;
    background-image: url("http://coolui.coolwl.cn/assets/yun.png");
    background-repeat: no-repeat;
    background-size: auto 20%;
    background-position: center bottom;
    opacity: 1;
    transition: all .4s;
}

.yun.on {
    opacity: 0;
    transition: all .4s;
}

.huojian {
    width: 100%;
    height: 100%;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    transition: all .4s;
    background-image: url("http://coolui.coolwl.cn/assets/huojian.png");
    background-repeat: no-repeat;
    background-size: auto 50%;
    background-position: center 55%;
    transition: all .4s;
}

.huojian.on {
    transform: translateX(-50%) translateY(-200%);
    transition: all .4s;
}

